<%include ./partials/header.ejs %>
<link rel="stylesheet" href="/sign.css">
<div class = "container edit">
    <h2>Sign Up!</h2>

    <div class = "col-lg-12">
        <hr>
        <form action="/signup" method="post">
            <div class ="form-group">
                <input type="text" class="form-control" name="username" placeholder="Username" required>
            </div>
            <div class ="form-group">
                <input type="email" class ="form-control" name="email" placeholder="Email" required>
            </div>
            <div class ="form-group">
                <input type="password" class ="form-control" name="password" placeholder="Password" minlength="8" required>
            </div>

            <p style="font-size: 1.2em"><strong>By clicking Create Account, you agree to our Terms and confirm that you have read our Data Policy, including our Cookie Use Policy. You may receive SMS message notifications from Swoosh! and can opt out at any time.</strong></p>



                <button type="submit" class="btn btn-success btn-lg btn-block">Sign Up</button>
        </form>
    </div>

<%include ./partials/footer.ejs %>